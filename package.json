{
  "name": "hlviewer.js",
  "version": "0.8.3",
  "description": "View GoldSrc maps and replays in browser",
  "keywords": [
    "hlviewer",
    "half-life",
    "halflife",
    "goldsrc",
    "kreedz"
  ],
