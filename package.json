  "bugs": {
    "url": "https://github.com/skyrim/hlviewer.js/issues"
  },
  "homepage": "https://skyrim.github.io/hlviewer.js",
  "dependencies": {
    "gl-matrix": "^3.4.3",
    "nanoevents": "^9.0.0",
    "solid-js": "^1.8.22"
  },
  "devDependencies": {
    "@types/gl-matrix": "^3.2.0",
    "@types/pngjs": "^6.0.5",
    "pngjs": "^7.0.0",
    "typescript": "^5.5.4",
    "vite": "^6.3.2",
    "vite-plugin-solid": "^2.10.2"
